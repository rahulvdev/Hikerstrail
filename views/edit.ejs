<% include ./partials/header %>
<h1>Edit <%= hikesite.name %></h1>
<div class="container">
    <div>
 <form action="/hikespots/<%= hikesite._id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label>Camp Name</label>
    <input type="input" class="form-control"  name="hikesite[name]" value="<%= hikesite.name %>">
  </div>
  <div class="form-group">
    <label>Image Url</label>
    <input type="input" class="form-control" name="hikesite[image]" value="<%= hikesite.image %>">
  </div>
  <div class="form-group">
      <label>Camp Description</label>
      <textarea rows="10" cols="10" name="hikesite[description]"><%- hikesite.description %></textarea>
  </div>
  <div>
  <button type="submit" class="btn btn-primary">Submit</button>
  </div>
  <a href="/hikespots/<%= hikesite._id %>">Go back</a>
</form>
</div>
</div>

<% include ./partials/footer %>