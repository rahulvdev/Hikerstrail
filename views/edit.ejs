<% include ./partials/header %>
<div class="container">
  <h1>Edit <%= hikesite.name %></h1>
    <div>
 <form action="/hikespots/<%= hikesite._id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label>Camp Name</label>
    <input type="input" class="form-control"  name="name" value="<%= hikesite.name %>">
  </div>
  <div class="form-group">
    <label>Image Url</label>
    <input type="input" class="form-control" name="image" value="<%= hikesite.image %>">
  </div>
  <div class="form-group">
    <label for="location">Location</label>
    <input class="form-control" type="text" name="location" id="location" value="<%= hikesite.location %>">
</div>
  <div class="form-group">
      <label>Camp Description</label>
      <textarea rows="10" cols="10" name="description"><%- hikesite.description %></textarea>
  </div>
  <div>
  <button type="submit" class="btn btn-primary">Submit</button>
  </div>
  <a href="/hikespots/<%= hikesite._id %>">Go back</a>
</form>
</div>
</div>

<% include ./partials/footer %>